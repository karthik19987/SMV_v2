<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Current Sale Total Display -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Sale"
                android:textSize="20sp"
                android:textColor="#666666"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_total_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â‚¹ 0.00"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:gravity="center"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Items with Inline Input Fields -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shop Items"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginBottom="20dp"/>

            <!-- Dynamic Items Container -->
            <LinearLayout
                android:id="@+id/container_sale_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- Items will be added dynamically -->
            </LinearLayout>

            <TextView
                android:id="@+id/tv_no_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No products available.\nAdd products from Dashboard."
                android:textSize="16sp"
                android:textColor="#999999"
                android:gravity="center"
                android:padding="20dp"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear_all"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Clear All"
            android:textSize="18sp"
            android:textStyle="bold"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@color/red_500" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_complete_sale"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Complete Sale"
            android:textSize="18sp"
            android:textStyle="bold"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@color/green_500" />

    </LinearLayout>

    <!-- View All Sales Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_view_all_sales"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="View All Sales"
        android:textSize="18sp"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="@color/purple_500"
        android:textColor="@color/purple_500" />

    <!-- Debug: Check Products Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_debug_check_products"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="Debug: Check Products"
        android:textSize="18sp"
        android:textStyle="bold"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        app:strokeColor="@color/red_500"
        android:textColor="@color/red_500" />


</LinearLayout>
</ScrollView>