<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Sale Total Display -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Sale"
                android:textSize="20sp"
                android:textColor="#666666"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tv_total_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="₹ 0.00"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="#2E7D32"
                android:gravity="center"
                android:layout_marginTop="8dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Items with Inline Input Fields -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shop Items"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginBottom="20dp"/>

            <!-- Podipp -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Podipp"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/et_podipp_qty"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Qty"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg @"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp"/>

                <EditText
                    android:id="@+id/et_podipp_price"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="₹10"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tv_podipp_total"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="₹0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- Chilly -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Chilly"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/et_chilly_qty"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Qty"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg @"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp"/>

                <EditText
                    android:id="@+id/et_chilly_price"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="₹25"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tv_chilly_total"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="₹0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- Malli -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Malli"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/et_malli_qty"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Qty"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kg @"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp"/>

                <EditText
                    android:id="@+id/et_malli_price"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="₹15"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tv_malli_total"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="₹0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:gravity="center"/>

            </LinearLayout>

            <!-- Unda -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Unda"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/et_unda_qty"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="Qty"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pc @"
                    android:textSize="14sp"
                    android:layout_marginEnd="4dp"/>

                <EditText
                    android:id="@+id/et_unda_price"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:hint="₹6"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tv_unda_total"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="₹0"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btn_clear_all"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Clear All"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="#F44336"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_complete_sale"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Complete Sale"
            android:textSize="18sp"
            android:textStyle="bold"
            android:background="#4CAF50"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- Add New Product Button -->
    <Button
        android:id="@+id/btn_add_new_item"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="+ Add New Product/Service"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="#2196F3"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp" />

</LinearLayout>
</ScrollView>