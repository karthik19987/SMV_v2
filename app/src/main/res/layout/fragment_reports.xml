<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Date Range Selection -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Period"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_today"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Today"
                            android:textSize="14sp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_marginEnd="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_week"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="This Week"
                            android:textSize="14sp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_marginEnd="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_month"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="This Month"
                            android:textSize="14sp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_marginEnd="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_year"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="This Year"
                            android:textSize="14sp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_marginEnd="8dp"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_custom"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Custom"
                            android:textSize="14sp"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/tv_date_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today: 01 Jan 2024"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_marginTop="8dp"
                    android:gravity="center"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Summary Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Sales Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#E8F5E9">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sales"
                        android:textSize="14sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/tv_total_sales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹0.00"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tv_sales_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 transactions"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Expenses Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#FFEBEE">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Expenses"
                        android:textSize="14sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/tv_total_expenses"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="₹0.00"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#F44336"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/tv_expenses_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 expenses"
                        android:textSize="12sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Profit Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#E3F2FD">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Net Profit"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/tv_net_profit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="₹0.00"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:gravity="center"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sales Breakdown -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sales by Item"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:id="@+id/container_sales_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Items will be added dynamically -->
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_no_sales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No sales data"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:gravity="center"
                    android:padding="20dp"
                    android:visibility="gone"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Expenses Breakdown -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expenses by Category"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:id="@+id/container_expense_categories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- Categories will be added dynamically -->
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_no_expenses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No expense data"
                    android:textSize="14sp"
                    android:textColor="#999999"
                    android:gravity="center"
                    android:padding="20dp"
                    android:visibility="gone"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Export Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_export"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Export Report (CSV)"
            android:textSize="16sp"
            android:textStyle="bold"
            style="@style/Widget.MaterialComponents.Button"
            app:backgroundTint="@color/purple_500"
            app:icon="@android:drawable/ic_menu_save"
            app:iconGravity="textStart"/>

    </LinearLayout>
</ScrollView>